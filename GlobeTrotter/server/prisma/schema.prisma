generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  phone     String?
  city      String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Trip {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  name        String
  startDate   DateTime
  endDate     DateTime
  description String?
  coverImage  String?
  isPublic    Boolean  @default(false)
  budget      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  stops       Stop[]
}

model Stop {
  id            String     @id @default(uuid())
  tripId        String
  trip          Trip       @relation(fields: [tripId], references: [id], onDelete: Cascade)
  cityId        String
  city          City       @relation(fields: [cityId], references: [id])
  arrivalDate   DateTime
  departureDate DateTime
  order         Int
  activities    Activity[]
}

model Activity {
  id          String   @id @default(uuid())
  stopId      String
  stop        Stop     @relation(fields: [stopId], references: [id], onDelete: Cascade)
  name        String
  cost        Float    @default(0)
  type        String?
  status      String   @default("planned")
  description String?
  imageUrl    String?
  time        DateTime?
}

model City {
  id        String @id @default(uuid())
  name      String
  country   String
  costIndex Float?
  image     String?
  stops     Stop[]
}
